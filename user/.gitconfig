[diff]
	tool = diffmerge
[difftool "diffmerge"]
	cmd = diffmerge \"$LOCAL\" \"$REMOTE\"
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
	trustExitCode = true
[alias]
	mk = !bash -c 'source $HOME/.bash_aliases && g_mk \"$@\"' g_mk
	delete = !bash -c 'source $HOME/.bash_aliases && g_delete \"$@\"' g_delete
	cd = !bash -c 'source $HOME/.bash_aliases && g_cd \"$@\"' g_cd
	ls = !bash -c 'source $HOME/.bash_aliases && g_ls' 
	pr = !bash -c 'source $HOME/.bash_aliases && g_push'
	sync = !bash -c 'source $HOME/.bash_aliases && g_sync'
	scan = !bash -c 'source $HOME/.bash_aliases && g_scan'
	dsquashed = !bash -c 'source $HOME/.bash_aliases && g_dsquashed'
