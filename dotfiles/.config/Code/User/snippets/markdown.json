{
	"Create readme": {
		"prefix": "readme",
		"body": [
			"# $1",
			"<!-- short description of package -->",
			"## About",
			"<!-- long description of package -->",
			"## Installation",
			"<!-- installation instructions including prerequisites -->",
			"## Usage",
			"<!-- description of setup, command options, etc -->",
			"## License",
			"<!-- link to license file -->",
			"## Contributing",
			"<!-- link to contributing instructions -->"
		],
		"description": "Outline for README file",
	},
	"Insert Front Matter": {
		"prefix": "---",
		"body": [
			"---",
			"layout: text_entry",
			"title: ${1:title}",
			"category: ${2:Robotics}",
			"series: ${3}",
			"tags: ${4}",
			"image: ${5}",
			"summary: ${6}",
			"redirect_from: ",
			"---"
		],
		"description": "Default front matter for a blog post"
	},

	"Decision log": {
		"prefix": "log",
		"body":[
			"## ${1:title}",
			"**Date:** ${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE}",
			"**Context:** ${2:Why was this decision needed?}",
			"**Decision:** ${3: What did you choose?}",
			"**Consequences:** ${4:What happens as a result?}",
			"**Links**: ${5: Link to issue/discussion}"
		],
		"description": "Template for a decsion log entry"
	}
}
